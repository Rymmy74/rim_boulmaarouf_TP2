from Fleet import Fleet
from Spaceship import Spaceship
from Operator import Operator
from Mentalist import Mentalist
from save_and_load_data import save_data, load_data
import random

# --- Fonction utilitaire pour proposer la sauvegarde ---
def ask_save(fleet):
    choice = input("Voulez-vous sauvegarder la flotte ? (o/n) : ").strip().lower()
    if choice == "o":
        save_data(fleet)
        print("  Flotte sauvegard√©e avec succ√®s.")
    else:
        print(" Flotte non sauvegard√©e (aucun changement √©crit dans le fichier).")


# --- Chargement au d√©marrage ---
galactica = Fleet("Galactica")
start_choice = input("Voulez-vous charger une flotte existante ? (o/n) : ")
if start_choice.lower() == "o":
    galactica = load_data("data.json")

# --- √âv√©nement al√©atoire ---
def random_event(fleet):
    event = random.choice(["attaque", "renfort"])
    if event == "attaque" and fleet.get_spaceships():
        ship = random.choice(fleet.get_spaceships())
        ship.set_condition("endommag√©")   # utilise setter
        print(f"‚ö†Ô∏è Attaque ennemie ! Le vaisseau {ship.get_name()} est endommag√©.")
        save_data(fleet)  # sauvegarde directe
        print("√âtat de la flotte sauvegard√© apr√®s l'attaque.")
    elif event == "renfort" and fleet.get_spaceships():
        ship = random.choice(fleet.get_spaceships())
        new_member = Operator("Renfort", "Inconnu", "homme", 25, "technicien")
        ship.append_member(new_member)
        print(f"üõ†Ô∏è Renfort ajout√© au vaisseau {ship.get_name()}.")
        save_data(fleet)  # sauvegarde directe
        print("√âtat de la flotte sauvegard√© apr√®s le renfort.")


# --- Statistiques globales ---
def global_statistics(fleet):
    total_ships = len(fleet.get_spaceships())
    roles = {"pilote":0, "technicien":0, "commandant":0, "mentaliste":0}
    operational = 0
    damaged = 0

    for ship in fleet.get_spaceships():
        if ship.get_condition() == "op√©rationnel":
            operational += 1
        else:
            damaged += 1
        for m in ship.get_crew():
            if isinstance(m, Operator):
                roles[m.get_role()] = roles.get(m.get_role(), 0) + 1
            elif isinstance(m, Mentalist):
                roles["mentaliste"] += 1

    print(f"üìä Statistiques globales :")
    print(f"- Nombre total de vaisseaux : {total_ships}")
    print(f"- Membres par r√¥le : {roles}")
    print(f"- Vaisseaux op√©rationnels : {operational}, endommag√©s : {damaged}")

# --- Menu principal ---
def menu():
    global galactica
    while True:
        print("\n=== Gestion de la flotte :", galactica.get_name(), "===")
        print("1. Renommer la flotte")
        print("2. Ajouter un vaisseau √† la flotte")
        print("3. Supprimer un vaisseau")   # <-- d√©plac√© ici
        print("4. Ajouter un membre d'√©quipage")
        print("5. Supprimer un membre d'√©quipage")
        print("6. Afficher les informations d'un √©quipage")
        print("7. V√©rifier la pr√©paration d'un vaisseau")
        print("8. Sauvegarder la flotte")
        print("9. Afficher les statistiques globales")
        print("10. D√©clencher un √©v√©nement al√©atoire")
        print("11. Quitter")

        choice = input("Choisissez une option : ")

        match choice:
            case "1":  # Renommer la flotte
                new_name = input("Nouveau nom de la flotte (ou 'cancel') : ").strip()
                if new_name.lower() == "cancel":
                    print(" Action annul√©e.")
                    continue

                confirm = input(f"Confirmer le renommage en '{new_name}' ? (o/n) : ").strip().lower()
                if confirm == "o":
                    save_choice = input("Voulez-vous sauvegarder ce renommage ? (o/n) : ").strip().lower()
                    if save_choice == "o":
                        galactica.set_name(new_name)       # changement appliqu√© uniquement si sauvegarde
                        save_data(galactica)               # √©crit dans le fichier
                        print(f"  Flotte renomm√©e et sauvegard√©e en '{new_name}'.")
                    else:
                        print(" Renommage annul√©. Aucun changement en m√©moire ni fichier.")
                else:
                    print(" Renommage annul√©.")


            case "2":  # Ajouter un vaisseau
                # -- Saisie du nom du vaisseau ou annulation --
                name = input("Nom du vaisseau (ou 'cancel') : ").strip()
                if name.lower() == "cancel":
                    print(" Ajout annul√©.")
                    continue

                # -- Saisie et validation du type --
                valid_types = ["marchand", "guerre", "transport"]
                ship_type = input("Type du vaisseau (marchand/guerre/transport ou 'cancel') : ").lower()
                if ship_type == "cancel":
                    print(" Ajout annul√©.")
                    continue
                if ship_type not in valid_types:
                    print(" Type invalide. Choisissez parmi :", ", ".join(valid_types))
                    continue

                # -- Confirmation avant cr√©ation --
                confirm = input(f"Confirmer l'ajout du vaisseau '{name}' de type '{ship_type}' ? (o/n) : ").strip().lower()
                if confirm == "o":
                    save_choice = input("Voulez-vous sauvegarder cet ajout ? (o/n) : ").strip().lower()
                    if save_choice == "o":
                        ship = Spaceship(name, ship_type)     # cr√©ation seulement si sauvegarde
                        galactica.append_spaceship(ship)      # ajout en m√©moire
                        save_data(galactica)                  # √©criture dans le fichier
                        print(f" Vaisseau '{name}' de type '{ship_type}' ajout√© et sauvegard√©.")
                    else:
                        print("  Ajout annul√©. Aucun changement en m√©moire ni fichier.")
                else:
                    print("  Ajout annul√©.")



            case "3":  # Supprimer un vaisseau
                fleet_ships = galactica.get_spaceships()
                if not fleet_ships:
                    print("  Aucun vaisseau dans la flotte.")
                    continue

                # -- Affichage des vaisseaux disponibles --
                for i, ship in enumerate(fleet_ships):
                    print(i+1, "-", ship.get_name())

                idx_input = input("Choisissez un vaisseau √† supprimer (ou 'cancel') : ").strip()
                if idx_input.lower() == "cancel":
                    print("  Suppression annul√©e.")
                    continue

                try:
                    idx = int(idx_input) - 1
                except ValueError:
                    print("  Oups ! Ce n'√©tait pas un num√©ro.")
                    continue

                if idx < 0 or idx >= len(fleet_ships):
                    print("  Num√©ro invalide.")
                    continue

                ship = fleet_ships[idx]

                # -- Confirmation avant suppression --
                confirm = input(f"Confirmer la suppression du vaisseau '{ship.get_name()}' ? (o/n) : ").strip().lower()
                if confirm == "o":
                    save_choice = input("Voulez-vous sauvegarder cette suppression ? (o/n) : ").strip().lower()
                    if save_choice == "o":
                        galactica.get_spaceships().remove(ship)   # suppression seulement si sauvegarde
                        save_data(galactica)                      # √©criture dans le fichier
                        print(f"  Vaisseau '{ship.get_name()}' supprim√© et sauvegard√©.")
                    else:
                        print("  Suppression annul√©e. Aucun changement en m√©moire ni fichier.")
                else:
                    print("  Suppression annul√©e.")




            case "4":  # Ajouter un membre d'√©quipage
                # -- V√©rification qu'il y a des vaisseaux --
                fleet_ships = galactica.get_spaceships()
                if not fleet_ships:
                    print("  Aucun vaisseau dans la flotte.")
                    continue

                # -- Affichage des vaisseaux disponibles --
                for i, ship in enumerate(fleet_ships):
                    print(i+1, "-", ship.get_name())

                # -- Choix du vaisseau --
                idx_input = input("Choisissez un vaisseau (ou 'cancel') : ").strip()
                if idx_input.lower() == "cancel":
                    print("  Ajout annul√©.")
                    continue
                try:
                    idx = int(idx_input) - 1
                except ValueError:
                    print("  Oups ! Ce n'√©tait pas un num√©ro.")
                    continue
                if idx < 0 or idx >= len(fleet_ships):
                    print("  Num√©ro invalide.")
                    continue
                ship = fleet_ships[idx]

                # -- Saisie du r√¥le avec validation stricte --
                role = input("Type de membre (operateur/mentaliste ou 'cancel') : ").lower()
                if role == "cancel":
                    print("  Ajout annul√©.")
                    continue
                if role not in ["operateur", "mentaliste"]:
                    print("  Type invalide. Choisissez parmi : operateur, mentaliste.")
                    continue

                # -- Saisie pr√©nom et nom --
                first = input("Pr√©nom (ou 'cancel') : ").strip()
                if first.lower() == "cancel":
                    print("  Ajout annul√©.")
                    continue
                last = input("Nom (ou 'cancel') : ").strip()
                if last.lower() == "cancel":
                    print("  Ajout annul√©.")
                    continue

                # -- Saisie du genre avec validation stricte --
                gender = input("Genre (femme/homme/autre ou 'cancel') : ").lower()
                if gender == "cancel":
                    print("  Ajout annul√©.")
                    continue
                if gender not in ["femme", "homme", "autre"]:
                    print("  Genre invalide. Choisissez parmi : femme, homme, autre.")
                    continue

                # -- Saisie et validation de l'√¢ge --
                age_input = input("√Çge (ou 'cancel') : ").strip()
                if age_input.lower() == "cancel":
                    print("  Ajout annul√©.")
                    continue
                try:
                    age = int(age_input)
                except ValueError:
                    print("  √Çge invalide.")
                    continue

                # -- Saisie du r√¥le sp√©cifique si operateur --
                if role == "operateur":
                    op_role = input("R√¥le de l'op√©rateur (pilote/technicien/commandant ou 'cancel') : ").lower()
                    if op_role == "cancel":
                        print("  Ajout annul√©.")
                        continue
                    if op_role not in ["pilote", "technicien", "commandant"]:
                        print("  R√¥le invalide. Choisissez parmi : pilote, technicien, commandant.")
                        continue
                    member = Operator(first, last, gender, age, op_role)
                else:
                    member = Mentalist(first, last, gender, age)

                # -- Confirmation avant ajout --
                confirm = input(f"Confirmer l'ajout de {first} {last} √† '{ship.get_name()}' ? (o/n) : ").strip().lower()
                if confirm == "o":
                    save_choice = input("Voulez-vous sauvegarder cet ajout ? (o/n) : ").strip().lower()
                    if save_choice == "o":
                        ship.append_member(member)   # ajout seulement si sauvegarde
                        save_data(galactica)         # √©criture dans le fichier
                        print(f"  Membre {first} {last} ajout√© √† '{ship.get_name()}' et sauvegard√©.")
                    else:
                        print("  Ajout annul√©. Aucun changement en m√©moire ni fichier.")
                else:
                    print("  Ajout annul√©.")


            case "5":  # Supprimer un membre d'√©quipage
                # -- V√©rification qu'il y a des vaisseaux --
                fleet_ships = galactica.get_spaceships()
                if not fleet_ships:
                    print("  Aucun vaisseau dans la flotte.")
                    continue

                # -- Affichage des vaisseaux disponibles --
                for i, ship in enumerate(fleet_ships):
                    print(i+1, "-", ship.get_name())

                # -- Choix du vaisseau --
                idx_input = input("Choisissez un vaisseau (ou 'cancel') : ").strip()
                if idx_input.lower() == "cancel":
                    print("  Action annul√©e.")
                    continue
                try:
                    idx = int(idx_input) - 1
                except ValueError:
                    print("  Oups ! Ce n'√©tait pas un num√©ro.")
                    continue
                if idx < 0 or idx >= len(fleet_ships):
                    print("  Num√©ro invalide.")
                    continue
                ship = fleet_ships[idx]

                # -- Saisie du nom du membre √† supprimer --
                last_name = input("Nom du membre √† supprimer (ou 'cancel') : ").strip()
                if last_name.lower() == "cancel":
                    print("  Action annul√©e.")
                    continue

                # -- V√©rification que le membre existe --
                crew = ship.get_crew()
                if not any(m.get_last_name().lower() == last_name.lower() for m in crew):
                    print(f"  Aucun membre nomm√© '{last_name}' dans le vaisseau {ship.get_name()}.")
                    continue

                # -- Confirmation avant suppression --
                confirm = input(f"Confirmer la suppression de '{last_name}' ? (o/n) : ").strip().lower()
                if confirm == "o":
                    save_choice = input("Voulez-vous sauvegarder cette suppression ? (o/n) : ").strip().lower()
                    if save_choice == "o":
                        ship.remove_member(last_name)   # suppression seulement si sauvegarde
                        save_data(galactica)            # √©criture dans le fichier
                        print(f"  Membre '{last_name}' supprim√© de '{ship.get_name()}' et sauvegard√©.")
                    else:
                        print("  Suppression annul√©e. Aucun changement en m√©moire ni fichier.")
                else:
                    print("  Suppression annul√©e.")




            case "6":  # Afficher les informations d'un √©quipage
                        
                # -- V√©rification qu'il y a des vaisseaux --
                fleet_ships = galactica.get_spaceships()
                if not fleet_ships:
                    print(" Aucun vaisseau dans la flotte.")
                    continue

                # -- Affichage des vaisseaux disponibles --
                for i, ship in enumerate(fleet_ships):
                    print(i+1, "-", ship.get_name())

                # -- Choix du vaisseau --
                idx_input = input("Choisissez un vaisseau (ou 'cancel') : ")
                if idx_input.lower() == "cancel":
                    print(" Action annul√©e.")
                    continue

                try:
                    idx = int(idx_input) - 1
                except ValueError:
                    print("  Oups ! Ce n'√©tait pas un num√©ro. Essaie encore.")
                    continue

                if idx < 0 or idx >= len(fleet_ships):
                    print(" Num√©ro invalide. Essaie encore.")
                    continue

                # -- Affichage des informations d'√©quipage --
                ship = fleet_ships[idx]
                crew = ship.get_crew()

                print("\n" + "="*40)
                print(f"üë• √âquipage du vaisseau '{ship.get_name()}':")
                print("="*40)

                if not crew:
                    print(" Aucun membre dans l'√©quipage.")
                else:
                    for i, member in enumerate(crew, start=1):
                        print(f"\n_ Membre {i}")
                        print(f"   Nom complet : {member.get_first_name()} {member.get_last_name()}")
                        print(f"   Genre       : {member.get_gender()}")
                        print(f"   √Çge         : {member.get_age()} ans")
                        print(f"   R√¥le        : {member.get_role()}")

                        # -- Affichage sp√©cifique selon le type --
                        if isinstance(member, Operator):
                            print(f"    Type        : Op√©rateur ({member.get_role()})")
                            print(f"   Exp√©rience  : {member.get_experience()} XP")
                        elif isinstance(member, Mentalist):
                            print("   Type        : Mentaliste")
                            print(f"   Mana        : {member.get_mana()}")

                print("="*40 + "\n")




            case "7":  # V√©rifier la pr√©paration d'un vaisseau
                fleet_ships = galactica.get_spaceships()
                if not fleet_ships:
                    print(" Aucun vaisseau dans la flotte.")
                    continue

                # -- Affichage des vaisseaux disponibles --
                for i, ship in enumerate(fleet_ships):
                    print(i+1, "-", ship.get_name())

                # -- Choix du vaisseau --
                idx_input = input("Choisissez un vaisseau (ou 'cancel') : ")
                if idx_input.lower() == "cancel":
                    print(" Action annul√©e.")
                    continue

                try:
                    idx = int(idx_input) - 1
                except ValueError:
                    print("  Oups ! Ce n'√©tait pas un num√©ro.")
                    continue

                if idx < 0 or idx >= len(fleet_ships):
                    print(" Num√©ro invalide.")
                    continue

                ship = fleet_ships[idx]

                # -- Utilisation du nouveau check_preparation --
                ready, reasons = ship.check_preparation()

                if ready:
                    print(f" Le vaisseau '{ship.get_name()}' est pr√™t au d√©part !")
                else:
                    print(f" Le vaisseau '{ship.get_name()}' n'est pas pr√™t.")
                    print("   Raisons :")
                    for r in reasons:
                        print("   -", r)
                        
            case "8":
                save_data(galactica)
                print(" Flotte sauvegard√©e avec succ√®s.")

            case "9":
                global_statistics(galactica)

            case "10":
                random_event(galactica)

            case "11":
                print(" Au revoir !")
                break

            case _:
                print(" Choix invalide, r√©essayez.")

# Lancer le menu
menu()




""" quelque principe :
case 3 :
try ‚Üí on tente une op√©ration.
Le -1 est n√©cessaire car en Python les listes commencent √† 0, mais toi tu affiches √† partir de 1 pour l‚Äôutilisateur.
1_except ValueError:
Ce bloc dit : ‚ÄúSi une erreur de type ValueError arrive, ne plante pas le programme. √Ä la place, affiche un message sympa et continue.‚Äù
Donc au lieu que ton programme crashe avec un gros message rouge, tu contr√¥les l‚Äôerreur et tu guides l‚Äôutilisateur. """

